<idea-plugin version="1" url="git@github.com:spygi/ideapropertysorterplugin.git">
    <name>Property Sorter</name>
    <description><![CDATA[
    An extension of the Property Sorter plugin from Oliver Wehrens. Forked off git@github.com:oliverwehrens/ideapropertysorterplugin.git</p>
  ]]></description>

    <change-notes><![CDATA[
    Version 0.1
    <ul>
      <li>Initial Release.</li>
    </ul>
  ]]></change-notes>


    <version>0.1</version>

    <idea-version since-build="8000"/>

    <application-components>
        <!-- Add your application components here -->
        <component>
            <implementation-class>net.wehrens.intellij.plugins.propertysorter.MessageWindowComponent</implementation-class>
        </component>
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <action id="SortProperties2" class="net.wehrens.intellij.plugins.propertysorter.SortPropertiesAction" text="Sort properties">
            <add-to-group group-id="CodeMenu" anchor="after" relative-to-action="MoveStatementUp"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
</idea-plugin>
